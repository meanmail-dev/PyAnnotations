<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="Python"
                         shortName="UnionWithOneChildToChildInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="ru.meanmail.codeInspection.UnionWithOneChildToChildInspection"
                         displayName="Union with single type"/>
        <localInspection language="Python"
                         shortName="UnionWithObjectInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="ru.meanmail.codeInspection.UnionWithObjectInspection"
                         displayName="Union with object"/>
        <localInspection language="Python"
                         shortName="UnionWithNoneInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="ru.meanmail.codeInspection.UnionWithNoneInspection"
                         displayName="Union with None"/>
        <localInspection language="Python"
                         shortName="RedundantOptionalInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="ru.meanmail.codeInspection.RedundantOptionalInspection"
                         displayName="Redundant Optional"/>
        <localInspection language="Python"
                         shortName="AnyInUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="ru.meanmail.codeInspection.AnyInUnionInspection"
                         displayName="Union with Any simplify"/>
    </extensions>
</idea-plugin>
