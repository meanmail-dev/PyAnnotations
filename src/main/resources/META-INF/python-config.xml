<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="Python"
                         shortName="UnionWithOneChildToChildInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.UnionWithOneChildToChildInspection"
                         displayName="Union with single type"/>
        <localInspection language="Python"
                         shortName="UnionWithObjectInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.UnionWithObjectInspection"
                         displayName="Union with object"/>
        <localInspection language="Python"
                         shortName="UnionWithNoneInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.UnionWithNoneInspection"
                         displayName="Union with None"/>
        <localInspection language="Python"
                         shortName="RedundantOptionalInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.RedundantOptionalInspection"
                         displayName="Redundant Optional"/>
        <localInspection language="Python"
                         shortName="AnyInUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.AnyInUnionInspection"
                         displayName="Union with Any simplify"/>

        <!-- Pipe union syntax inspections (Python 3.10+) -->
        <localInspection language="Python"
                         shortName="PipeSyntaxWithObjectInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.PipeSyntaxWithObjectInspection"
                         displayName="Pipe union with object"/>
        <localInspection language="Python"
                         shortName="PipeSyntaxWithAnyInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.PipeSyntaxWithAnyInspection"
                         displayName="Pipe union with Any"/>
        <localInspection language="Python"
                         shortName="NestedPipeUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.NestedPipeUnionInspection"
                         displayName="Nested pipe union"/>
        <localInspection language="Python"
                         shortName="RedundantParenthesesInPipeUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.RedundantParenthesesInPipeUnionInspection"
                         displayName="Redundant parentheses in pipe union"/>

        <!-- Modernization inspections (Python 3.10+) - disabled by default -->
        <localInspection language="Python"
                         shortName="ConvertUnionToModernSyntaxInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.ConvertUnionToModernSyntaxInspection"
                         displayName="Convert Union to pipe syntax"/>
        <localInspection language="Python"
                         shortName="ConvertOptionalToModernSyntaxInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.ConvertOptionalToModernSyntaxInspection"
                         displayName="Convert Optional to pipe syntax"/>

        <!-- Phase 3: Additional type inspections -->
        <localInspection language="Python"
                         shortName="DuplicateTypesInUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.DuplicateTypesInUnionInspection"
                         displayName="Duplicate types in Union"/>
        <localInspection language="Python"
                         shortName="NestedUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.NestedUnionInspection"
                         displayName="Nested Union types"/>
        <localInspection language="Python"
                         shortName="RedundantUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.RedundantUnionInspection"
                         displayName="Redundant types in Union (subtype)"/>
        <localInspection language="Python"
                         shortName="EmptyUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="dev.meanmail.codeInspection.EmptyUnionInspection"
                         displayName="Empty or invalid Union"/>
        <localInspection language="Python"
                         shortName="MissingOptionalInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WARNING"
                         implementationClass="dev.meanmail.codeInspection.MissingOptionalInspection"
                         displayName="Missing Optional for None default"/>

        <!-- Collection type inspections (Python 3.9+) - disabled by default -->
        <localInspection language="Python"
                         shortName="DeprecatedTypingCollectionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.DeprecatedTypingCollectionInspection"
                         displayName="Deprecated typing collection"/>

        <!-- Backward compatibility inspections (Python < 3.10) - disabled by default -->
        <localInspection language="Python"
                         shortName="ConvertPipeToUnionInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.ConvertPipeToUnionInspection"
                         displayName="Convert pipe to Union syntax"/>
        <localInspection language="Python"
                         shortName="ConvertPipeNoneToOptionalInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.ConvertPipeNoneToOptionalInspection"
                         displayName="Convert X | None to Optional"/>

        <!-- Phase 4: Advanced features - disabled by default -->
        <localInspection language="Python"
                         shortName="ConvertToTypeStatementInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.ConvertToTypeStatementInspection"
                         displayName="Convert TypeAlias to type statement"/>
        <localInspection language="Python"
                         shortName="SimplifyCallableInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.SimplifyCallableInspection"
                         displayName="Simplify Callable annotation"/>
        <localInspection language="Python"
                         shortName="RedundantGenericInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.RedundantGenericInspection"
                         displayName="Redundant Generic in class definition"/>
        <localInspection language="Python"
                         shortName="UnboundTypeVarInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.UnboundTypeVarInspection"
                         displayName="Unbound TypeVar in annotation"/>
        <localInspection language="Python"
                         shortName="ProtocolMethodAnnotationInspection"
                         suppressId="PyAnnotations"
                         groupName="Python Annotations"
                         enabledByDefault="false"
                         level="WEAK WARNING"
                         implementationClass="dev.meanmail.codeInspection.ProtocolMethodAnnotationInspection"
                         displayName="Protocol method without type annotations"/>
    </extensions>
</idea-plugin>
